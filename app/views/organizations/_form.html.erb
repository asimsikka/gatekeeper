<%= form_with(model: organization, local: true, class: "space-y-6") do |form| %>
  <% if organization.errors.any? %>
    <div class="bg-red-100 border border-red-300 text-red-800 rounded-lg p-4">
      <h2 class="font-semibold mb-2">
        <%= pluralize(organization.errors.count, "error") %> prohibited this organization from being saved:
      </h2>
      <ul class="list-disc list-inside text-sm space-y-1">
        <% organization.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name,
      class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
  </div>

  <div>
    <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :description,
      class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
  </div>

  <div>
    <%= form.submit submit_label || "Save",
      class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition" %>
  </div>
<% end %>
