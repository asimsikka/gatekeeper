<%= form_with(model: organization, class: "space-y-6") do |form| %>
  <% if organization.errors.any? %>
    <div class="bg-red-100 border border-red-300 text-red-800 rounded-lg p-4">
      <h2 class="font-semibold mb-2">
        <%= pluralize(organization.errors.count, "error") %> prohibited this organization from being saved:
      </h2>
      <ul class="list-disc list-inside text-sm space-y-1">
        <% organization.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :name, class: "w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div>
    <%= form.submit "Create Organization", class: "px-4 py-2 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700 transition" %>
  </div>
<% end %>
