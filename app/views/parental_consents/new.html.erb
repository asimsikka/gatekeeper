<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="bg-white p-8 rounded-xl shadow-md w-full max-w-md">
    <h1 class="text-2xl font-bold mb-6 text-center text-gray-800">
      Parental Consent for <%= @user.first_name %>
    </h1>

    <%= form_with model: @consent, url: parental_consents_path, local: true, html: { class: "space-y-6" } do |f| %>
      <%= f.hidden_field :user_id, value: @user.id %>

      <div>
        <%= f.label :guardian_email, "Your Email", class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :guardian_email,
              class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2 focus:ring-blue-500 focus:border-blue-500" %>
        <% if @consent.errors[:guardian_email].any? %>
          <p class="text-sm text-red-600 mt-1"><%= @consent.errors.full_messages_for(:guardian_email).join(", ") %></p>
        <% end %>
      </div>

      <div>
        <%= f.submit "Send Consent Request",
              class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    <% end %>

    <div class="mt-4 text-center">
      <%= link_to "â† Back", root_path, class: "text-sm text-gray-600 hover:text-blue-600" %>
    </div>
  </div>
</div>
