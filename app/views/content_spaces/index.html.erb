<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-5xl mx-auto">

    <div class="flex items-center justify-between mb-8">
      <h2 class="text-3xl font-bold text-gray-800 align-top">
        Content Spaces <span class="text-blue-600"><%= @organization.name %></span>
      </h2>
      <div class="flex flex-col items-end space-y-2">
        <%= link_to "← Back", analytics_organization_path(@organization),
                    class: "text-sm text-gray-600 hover:text-gray-900" %>
        <% if policy(@organization).update? %>
          <%= link_to "New Space", new_organization_content_space_path(@organization),
                      class: "inline-flex items-center px-4 py-2 bg-green-600 text-white text-sm font-medium rounded hover:bg-green-700 shadow-sm transition" %>
        <% end %>
      </div>
    </div>

    <div class="space-y-4">
      <% @content_spaces.each do |space| %>
        <div class="bg-white p-4 rounded-xl shadow-sm hover:shadow-md transition flex items-center justify-between">
          <div>
            <h2 class="text-lg font-semibold text-gray-800">
              <%= link_to space.name, organization_content_space_path(@organization, space),
                          class: "hover:underline" %>
            </h2>
            <p class="text-sm text-gray-500">Age Range: <%= space.min_age %>–<%= space.max_age %></p>
          </div>
          <% if policy(space).update? %>
            <%= link_to "Edit", edit_organization_content_space_path(@organization, space),
                        class: "text-blue-600 text-sm hover:underline" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

